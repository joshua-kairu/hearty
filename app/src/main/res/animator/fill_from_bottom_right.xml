<!-- animate an filling of the heart from the bottom right -->

<objectAnimator

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:propertyName="pathData"

    android:valueFrom="@string/path_data_heart_clip_hidden_bottom_right"

    android:valueTo="@string/path_data_heart_clip_shown_triangle_bottom_right"

    android:duration="@integer/animation_time_heart_fill"

    android:interpolator="@android:interpolator/fast_out_slow_in"

    android:valueType="pathType"

    />

