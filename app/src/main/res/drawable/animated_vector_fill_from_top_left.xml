<!-- Fill the heart from the top left -->

<animated-vector

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:drawable="@drawable/ic_heart"

    >

    <target

        android:animation="@animator/fill_from_top_left"

        android:name="@string/path_name_heart_clip_top_left"

        />

</animated-vector>