<!-- The heart, empty, full, and clip for bottom animation -->

<vector

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:width="280dp"

    android:height="280dp"

    android:viewportWidth="56"

    android:viewportHeight="56"

    >

    <!-- paths -->

    <!-- empty path -->

    <path

        android:name="@string/path_name_heart_empty"

        android:pathData="@string/path_data_heart_empty"

        android:fillColor="@color/colorPrimary"

        />

    <!-- clip paths -->

    <!-- clip from bottom -->

    <clip-path

        android:name="@string/path_name_heart_clip_bottom"

        android:pathData="@string/path_data_heart_clip_hidden_bottom"

        />

    <!-- full path -->

    <path

        android:name="@string/path_name_heart_full"

        android:pathData="@string/path_data_heart_full"

        android:fillColor="@color/colorPrimary"

        />

</vector>